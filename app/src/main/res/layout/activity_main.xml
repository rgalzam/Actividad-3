<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Clickme_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click Me" />

            <Button
                android:id="@+id/LClickme_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long ClickMe" />

            <EditText
                android:id="@+id/edit_text_focus"
                android:layout_width="166dp"
                android:layout_height="82dp"
                android:hint="Focus on me"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="213dp" />

            <EditText
                android:id="@+id/press_text"
                android:layout_width="166dp"
                android:layout_height="82dp"
                android:hint="Press any key"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="213dp" />

            <Button
                android:id="@+id/button_touch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Touch Me" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>